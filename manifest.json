{
  "manifest_version": 2,
  "name": "no-caps",
  "version": "1.3.0",

  "icons": {
    "48": "icons/logo-48.png",
    "96": "icons/logo-96.png"
  },

  "description":
    "transform all text to lowercase. warning: this could break some sites",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"],
      "css": ["main.css"],
      "run_at": "document_start"
    }
  ],

  "options_ui": {
    "page": "settings.html"
  },

  "permissions": ["storage"]
}
